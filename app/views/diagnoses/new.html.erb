<div class="diagnosis-page">

  <!-- Header -->
  <div class="diagnosis-header">
    <p class="diagnosis-meta">
      <%= @plan.date.strftime("%-m月%-d日") %> ／ <%= @plan.park.name %>
    </p>
    <h1 class="diagnosis-title">
      あなたに合った回り方を考えます
    </h1>
    <p class="diagnosis-lead">
      いくつか選ぶだけで、FunFlow が1日の流れを整理します。
    </p>
  </div>

  <!-- Form -->
  <%= form_with url: diagnoses_path, method: :post, data: { turbo: false }, class: "diagnosis-form" do |f| %>
    <%= hidden_field_tag :plan_id, @plan.id %>

    <!-- Q1 -->
    <div class="diagnosis-card">
      <p class="diagnosis-question">重視するのは？</p>

      <label class="radio-card">
        <%= f.radio_button :focus, "attraction" %>
        <span>アトラクション</span>
      </label>

      <label class="radio-card">
        <%= f.radio_button :focus, "show" %>
        <span>ショー</span>
      </label>
    </div>

    <!-- Q2 -->
    <div class="diagnosis-card">
      <p class="diagnosis-question">朝の過ごし方は？</p>

      <label class="radio-card">
        <%= f.radio_button :morning, "early" %>
        <span>できるだけ早く開園待ちする（6:00〜7:00）</span>
      </label>

      <label class="radio-card">
        <%= f.radio_button :morning, "normal" %>
        <span>並ばずに入園したい（9:30頃）</span>
      </label>
    </div>

    <!-- Q3 -->
    <div class="diagnosis-card">
      <p class="diagnosis-question">DPA（有料パス）は？</p>

      <label class="radio-card">
        <%= f.radio_button :dpa, "buy" %>
        <span>買う</span>
      </label>

      <label class="radio-card">
        <%= f.radio_button :dpa, "no_buy" %>
        <span>買わない</span>
      </label>
    </div>

    <!-- Q4 -->
    <div class="diagnosis-card">
      <p class="diagnosis-question">絶叫アトラクションは？</p>

      <label class="radio-card">
        <%= f.radio_button :thrill, "yes" %>
        <span>乗る</span>
      </label>

      <label class="radio-card">
        <%= f.radio_button :thrill, "no" %>
        <span>乗らない</span>
      </label>
    </div>

    <!-- Actions -->
    <div class="diagnosis-actions">
      <%= f.submit "診断する", class: "primary-button" %>
    </div>

  <% end %>
</div>
