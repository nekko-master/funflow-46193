<div class="devise-page">

  <header class="devise-hero">
    <h1 class="devise-title">アカウント作成</h1>
    <p class="devise-lead">
      ニックネーム・メールアドレス・パスワードを入力してアカウントを作成してください。
    </p>
  </header>

  <main class="devise-form-card">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="devise-form-group">
        <%= f.label :nickname, "ニックネーム" %>
        <%= f.text_field :nickname, autofocus: true, class: "devise-form-input", required: true %>
      </div>

      <div class="devise-form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: "devise-form-input", required: true %>
      </div>

      <div class="devise-form-group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, class: "devise-form-input", required: true, autocomplete: "new-password" %>
      </div>

      <div class="devise-form-group">
        <%= f.label :password_confirmation, "パスワード確認" %>
        <%= f.password_field :password_confirmation, class: "devise-form-input", required: true %>
      </div>

      <div class="devise-form-actions">
        <%= f.submit "アカウント作成", class: "devise-primary-button" %>
      </div>

    <% end %>

    <div class="devise-form-actions">
      <%= link_to "ログインはこちら", new_session_path(resource_name), class: "devise-secondary-button" %>
    </div>

  </main>
</div>
